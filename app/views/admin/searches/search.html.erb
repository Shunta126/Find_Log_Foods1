<div class="container-field mt-3 mb-6">
  <% if @range == "customer" %>
    <div class="row justify-content-center">
      <h3><strong>会員検索結果一覧</strong></h3>
    </div>

    <div class="row justify-content-center">
    <div class="col-9">
      <div class="row justify-content-center">
        <% @customers.each do |customer| %>
            <div class="col-3 mb-5">
              <div class="p-3 box-shadow">
                <% if customer.is_deleted == false %>
                 <i class="fa-solid fa-circle" style="color: #50f708;"></i>
                <% else %>
                 <i class="fa-solid fa-circle" style="color: #b4b1b4;"></i>
                <% end %>
                <%= link_to admin_customer_path(customer.id) do%>
                  <div class="content text-center">
                    <% if customer.image.attached? %>
                      <%= image_tag customer.image, size: "150x150" %>
                    <% else %>
                      <%= image_tag 'no_image.jpg', size: "150x150" %>
                    <% end %>
                  </div>
                <% end %>
                <div class="content text-center">
                  <P><strong>年齢</strong><br><%= customer.age %><br>
                  <strong>名前</strong><br><%= link_to admin_customer_path(customer.id) do%>
                  <%= customer.name %>
                   <% end %>
                  </P>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>

    <% elsif @range == "店舗名" %>
    <div class="row justify-content-center">
      <h3><strong>店舗名検索結果一覧</strong></h3>
    </div>

    <div class="row justify-content-center">
    <div class="col-9">
      <div class="row">
        <% @restaurants.each do |restaurant| %>
            <div class="col-4 mb-5">
              <div class="p-3 box-shadow">
                <div class="content text-center">
                  <%= link_to admin_restaurant_path(restaurant.id) do%>
                    <% if restaurant.image.attached? %>
                      <%= image_tag restaurant.image, size: "180x180" %>
                    <% else %>
                      <%= image_tag 'no_image.jpg', size: "180x180" %>
                    <% end %>
                  <% end %>
                </div>
                <div class="content text-center">
                  <P><strong>店舗名</strong><br>
                  <%= link_to admin_restaurant_path(restaurant.id) do%>
                  <%= restaurant.restaurant_name %>
                  <% end %><br>
                  <strong>料金</strong><br>
                  <%= restaurant.price.to_s(:delimited) %>円<br>
                  <strong>所在地</strong><br>
                  <%= restaurant.place %></p>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>

    <% elsif @range == "所在地" %>
    <div class="row justify-content-center">
      <h3><strong>店舗所在地検索結果一覧</strong></h3>
    </div>

    <div class="row justify-content-center">
    <div class="col-9">
      <div class="row">
        <% @restaurants.each do |restaurant| %>
            <div class="col-4 mb-5">
              <div class="p-3 box-shadow">
                <div class="content text-center">
                  <%= link_to admin_restaurant_path(restaurant.id) do%>
                    <% if restaurant.image.attached? %>
                      <%= image_tag restaurant.image, size: "180x180" %>
                    <% else %>
                      <%= image_tag 'no_image.jpg', size: "180x180" %>
                    <% end %>
                  <% end %>
                </div>
                <div class="content text-center">
                  <P><strong>店舗名</strong><br>
                  <%= link_to admin_restaurant_path(restaurant.id) do%>
                  <%= restaurant.restaurant_name %>
                  <% end %><br>
                  <strong>料金</strong><br>
                  <%= restaurant.price.to_s(:delimited) %>円<br>
                  <strong>所在地</strong><br>
                  <%= restaurant.place %></p>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>