<div class="row justify-content-center">
  <h4><strong><%= @customer.name %>さんのページ</strong></h4>
</div>

<div class="row justify-content-center mt-3">
  <div class="col-6 text-center">
    <div class="p-3 box-shadow">
      <div class="content">
        <% if @customer.image.attached? %>
          <%= image_tag @customer.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "200x200" %>
        <% end %>
      </div>

      <div class="content">
        <h5><strong>Age</strong><%= @customer.age %>
        <strong class="ml-3">Name</strong><%= @customer.name %></h5>
      </div>

      <div class="content">
        <h5><strong>自己紹介</strong><br><%= @customer.body %></h5>
      </div>

      <div class="content">
        <h5><strong>Email</strong><br><%= @customer.email %></h5>
      </div>

      <div class="content">
        <strong>退会ステータス</strong>：
        <% if @customer.is_deleted == false %>
        有効
        <% else %>
        退会
        <% end %>
      </div>

    </div>
  </div>
</div>


<div class="row mt-3">
  <div class="col-2 offset-8">
   <%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
  </div>
</div>
