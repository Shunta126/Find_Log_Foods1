<div class="container-field mt-3 mb-6">
  <div class="row justify-content-center">
    <h3><strong><%= @customer.name %>さんの編集ページ</strong></h3>
  </div>
    <div class="row justify-content-center">
       <div class="col-6 text-center">
         <%= form_with model: @customer, url:admin_customer_path, local: true, method: :patch do |f| %>
           <div class="content">
              <h5><strong>プロフィール画像</strong></h5>
              <%= f.file_field :image, accept: "image/*" %>
           </div>

            <div class="content">
              <h5><strong>年齢<br><%= f.text_field :age,  placeholder: "8" %></strong></h5>
            </div>

            <div class="content">
              <h5><strong>名前<br><%= f.text_field :name, placeholder: "foodfighter" %></strong></h5>
            </div>

            <div class="content" cols="40" rows="8">
              <h5><strong>自己紹介<br><%= f.text_area :body, placeholder: "200字以内", size: "55×8" %></strong></h5>
            </div>

            <div class="content">
               <h5><strong>メールアドレス<br><%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %></strong></h5>
            </div>

            <div class="content">
              <%= f.label :会員ステータス %>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            </div>

            <div class="content">
             <%= f.submit '変更を保存', class: "button-edit" %>
            </div>
          <% end %>
        </div>
    </div>
</div>