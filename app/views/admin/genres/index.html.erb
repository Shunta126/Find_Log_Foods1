<div class="flash mt-2 text-center">
  <%= flash[:notice] %>
</div>

<div class="row justify-content-center">
  <% if @genre.errors.any? %>
    <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <%= @genre.errors.count %>件のエラーが発生しました
      </h6>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="row justify-content-center">
 <h3><strong>ジャンル一覧・追加</strong></h3>
</div>


<div class="row justify-content-center">
 <div class="mb-5 mt-3">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="mr-5 d-inline-block">ジャンル名</div>
    <div class="mr-5 d-inline-block"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
    <%= f.submit "新規登録", class: "button-edit" %>
  <% end %>
 </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-4">
    <table class="table">
      <thead style="background-color: #f5f5f5;">
        <tr>
          <th class="text-center">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center">
              <%= link_to edit_admin_genre_path(genre.id) do %>
                <botan class="button-edit">編集する</botan>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
