<div class="flash mt-2 text-center">
  <%= flash[:notice] %>
</div>

<div class="row justify-content-center">
  <% if @genre.errors.any? %>
      <ul class="alert alert-danger" role="alert">
        <h6 class="alert-heading">
          <%= @genre.errors.count %>件のエラーが発生しました
        </h6>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
</div>

<div class="row justify-content-center">
  <h3 class="mt-8 mb-5"><span class="back"><strong>ジャンル編集</strong></span></h3>
</div>

<div class="row justify-content-center">
 <div class="mb-5 mt-3">
  <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <div class="mr-5 d-inline-block">ジャンル名<div class="ml-5 d-inline-block"><%= f.text_field :name, placeholder: "ジャンル名" %></div></div>
    <div class="mr-5 d-inline-block"><%= f.submit "変更を保存", class: "button-edit" %></div>
  <% end %>
 </div>
</div>