<div class="row justify-content-center">
  <% if @genre.errors.any? %>
      <ul class="alert alert-danger" role="alert">
        <h6 class="alert-heading">
          <%= @genre.errors.count %>件のエラーが発生しました
        </h6>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
</div>

<div class="row justify-content-center">
  <h3 class="mt-8 mb-5"><span class="back"><strong>ジャンル編集</strong></span></h3>
</div>

<div class="row justify-content-center">
 <%= form_with model: @genre, url: admin_genre_path do |f| %>
  ジャンル名<%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit "変更を保存", class: "button-edit" %>
 <% end %>
</div>
