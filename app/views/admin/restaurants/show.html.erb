<div class="container-field mt-3 mb-6">
  <div class="flash mt-2 text-center">
    <%= flash[:notice] %>
  </div>

  <div class="row justify-content-center">
     <h4><strong>店舗詳細ページ</strong></h4>
  </div>

    <div class="row justify-content-center mt-3">
      <div class="col-5 justify-content-center text-center">
        <div class="p-3 box-shadow">
          <div class="content">
            <% if @restaurant.image.attached? %>
              <%= image_tag @restaurant.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "200x200" %>
            <% end %>
          </div>

          <div class="content">
            <h5><strong>店舗名</strong><br><%= @restaurant.restaurant_name %></h5>
          </div>

          <div class="content">
            <h5><strong>ジャンル</strong><br><%= @restaurant.genre.name %></h5>
          </div>

          <div class="content">
            <h5><strong>料理名<br></strong><%= @restaurant.food_name %></h5>
          </div>

          <div class="content">
            <h5><strong>金額<br></strong><%= @restaurant.price.to_s(:delimited) %>円</h5>
          </div>

          <div class="content">
            <h5><strong>感想・評価<br></strong><%= @restaurant.body %></h5>
          </div>

          <div class="content">
            <h5><strong>所在地<br></strong><%= @restaurant.place %></h5>
          </div>
        </div>
      </div>

      <div class="col-5">
        <div>
          <h4 class="text text-center">コメント一覧</h4>
        </div>

        <div id="comment_index">
          <section>
            <% @restaurant.comments.each do |comment| %>
              <table class="table">
                <th>
                  <td style="width:25%">
                    <%= link_to customer_path(comment.customer_id) do%>
                    <%= comment.customer.name %>
                    <% end %>
                  </td>

                  <td style="width:60%">
                    <%= comment.comment %>
                  </td>

                  <td style="width:15%">
                     <%= link_to "削除", admin_restaurant_comment_path(comment.restaurant, comment), method: :delete, remote:true, data: {"turbolinks" => false} %>
                  </td>
                </th>
               </table>
             <% end %>
            </section>
         </div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-2 offset-4">
         <%= link_to "編集する", edit_admin_restaurant_path(@restaurant.id), class: "button-edit" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-2 offset-4">
         <%= link_to "削除する", admin_restaurant_path(@restaurant.id), method: :delete, class: "button-delete", "data-confirm" => "本当に削除しますか？" %>
      </div>
    </div>
</div>