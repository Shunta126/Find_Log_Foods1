<div class="container-field mt-3 mb-6">
  <div class="row justify-content-end mr-5">
    <div class="search_form">
    <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
        <%= f.select :range, options_for_select([['店舗名'], ['所在地']]) %>
        <%= f.text_field :word %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit "検索", class: "button1" %>
      <% end %>
    </div>
   </div>

  <div class="row justify-content-center">
    <h3>投稿一覧</h3>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-9">
      <div class="row">
        <% @restaurants.each do |restaurant| %>
            <div class="col-4 mb-5">
              <div class="p-3 box-shadow">
                <div class="content text-center">
                  <%= link_to admin_restaurant_path(restaurant.id) do%>
                    <% if restaurant.image.attached? %>
                      <%= image_tag restaurant.image, size: "215x150", style: "object-fit: cover; border: 3px solid #FFC7AF;" %>
                    <% else %>
                      <%= image_tag 'restaaurant_no_img.jpeg', size: "215x150", style: "object-fit: cover; border: 3px solid #FFC7AF;" %>
                    <% end %>
                  <% end %>
                </div>
                <div class="content text-center">
                  <P><strong>店舗名</strong><br>
                  <%= link_to admin_restaurant_path(restaurant.id) do%>
                  <%= restaurant.restaurant_name %>
                  <% end %><br>
                  <strong>料金</strong>   <%= restaurant.price.to_s(:delimited) %>円<br>
                  <strong>所在地</strong><br>
                  <%= restaurant.place %></p>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>