<div class="row justify-content-end mr-5">
  <div class="search_form">
  <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
      <%= f.label :会員氏名 %>
      <%= f.hidden_field :range, value: 'customer' %>
      <%= f.text_field :word, size: "13" %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "button1" %>
    <% end %>
  </div>
</div>

<div class="row justify-content-center">
  <h3><strong>会員一覧</strong></h3>
</div>

<div class="row justify-content-center">
  <P><i class="fa-solid fa-circle" style="color: #50f708;"></i>=会員</p>
  <p><i class="fa-solid fa-circle ml-5" style="color: #b4b1b4;"></i>=退会済み</p>
</div>

<div class="row justify-content-center">
  <div class="col-9">
    <div class="row justify-content-center">
      <% @customers.each do |customer| %>
          <div class="col-3 mb-5">
            <div class="p-3 box-shadow">
              <% if customer.is_deleted == false %>
               <i class="fa-solid fa-circle" style="color: #50f708;"></i>
              <% else %>
               <i class="fa-solid fa-circle" style="color: #b4b1b4;"></i>
              <% end %>

              <%= link_to admin_customer_path(customer.id) do%>
                <div class="content text-center">
                  <% if customer.image.attached? %>
                    <%= image_tag customer.image, size: "150x150" %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', size: "150x150" %>
                  <% end %>
                </div>
              <% end %>
              <div class="content text-center">
                <P><strong>年齢</strong><br><%= customer.age %><br>
                <strong>名前</strong><br><%= link_to admin_customer_path(customer.id) do%>
                <%= customer.name %>
                 <% end %>
                </P>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>