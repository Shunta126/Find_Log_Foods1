                <% end %><br>
                料金<br>
                <%= restaurant.price %>円<br>
                所在地<br>
                <%= restaurant.place %></p>
              </div>
              <div class="content text-center">
                <P>いいね・コメント</P>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

