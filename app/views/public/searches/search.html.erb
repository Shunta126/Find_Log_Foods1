<% if @range == "customer" %>
  <div class="row justify-content-center">
    <h3><strong>会員検索結果一覧</strong></h3>
  </div>

  <div class="row justify-content-center">
  <div class="col-9">
    <div class="row justify-content-center">
      <% @customers.each do |customer| %>
          <div class="col-3 mb-5">
            <div class="p-3 box-shadow">
              <%= link_to customer_path(customer.id) do%>
                <div class="content text-center">
                  <% if customer.image.attached? %>
                    <%= image_tag customer.image, size: "150x150" %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', size: "150x150" %>
                  <% end %>
                </div>
              <% end %>
              <div class="content text-center">
                <P>Age<br><%= customer.age %><br>
                name<br><%= link_to customer_path(customer.id) do%>
                <%= customer.name %>
                 <% end %>
                </P>
              </div>
              <div class="content text-center">
                <P>投稿数</P>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

  <% elsif @range == "店舗名" %>
