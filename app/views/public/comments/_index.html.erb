<section>
<% restaurant.comments.each do |comment| %>
  <table class="table">
    <th>
      <td style="width:25%">
        <%= link_to customer_path(comment.customer_id) do%>
        <% if comment.customer.image.attached? %>
         <%= image_tag comment.customer.image, size: "40x40", style: "object-fit: cover; border-radius: 50%; border: 3px solid #99CCCC;" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "40x40", style: "object-fit: cover; border-radius: 50%; border: 3px solid #99CCCC;" %>
        <% end %><br>
         <%= comment.customer.name %>
        <% end %>
      </td>

      <td style="width:60%">
        <%= comment.comment %>
      </td>

      <td style="width:15%">
        <% if comment.customer == current_customer %>
         <%= link_to "削除", restaurant_comment_path(comment.restaurant, comment), method: :delete, remote:true, class: "button-delete", data: {"turbolinks" => false} %>
        <% end %>
      </td>
    </th>
   </table>
 <% end %>
</section>