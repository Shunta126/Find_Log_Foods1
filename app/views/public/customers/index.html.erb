<div class="row justify-content-center">
  <h3><strong>会員一覧</strong></h3>
</div>

<div class="row justify-content-center">
  <div class="col-9">
    <div class="row justify-content-center">
      <% @customers.each do |customer| %>
          <div class="col-3 mx-auto my-auto">
            <%= link_to customer_path(customer.id) do%>
              <div class="content text-center">
                <% if customer.image.attached? %>
                  <%= image_tag customer.image, size: "150x150" %>
                <% else %>
                  <%= image_tag 'no_image.jpg', size: "150x150" %>
                <% end %>
              </div>
            <% end %>
            <div class="content text-center">
              <P>Age<br><%= customer.age %><br>
              name<br><%= link_to customer_path(customer.id) do%>
              <%= customer.name %>
               <% end %>
              </P>
            </div>
            <div class="content text-center">
              <P>投稿数</P>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>