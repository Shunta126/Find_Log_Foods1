<div class="row justify-content-center">
  <h4><strong>マイページ編集</strong></h4>
</div>

 <%= form_with model: @customer, url:update_customer_path, local: true, method: :patch do |f| %>
  <div class="row justify-content-center mt-3">
    <div class="col-2 justify-content-center">
      <h5><strong>プロフィール画像</strong></h5>
      <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class="col-5 text-center">
      <div class="content">
        <h5><strong>Age<br><%= f.text_field :age,  placeholder: "20" %></strong></h5>
      </div>

      <div class="content">
        <h5><strong>Name<br><%= f.text_field :name, placeholder: "foodfighter" %></strong></h5>
      </div>

      <div class="content" cols="40" rows="8">
        <h5><strong>自己紹介<br><%= f.text_area :body, placeholder: "200字以内", size: "55×8" %></strong></h5>
      </div>

      <div class="content">
         <h5><strong>Email<br><%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %></strong></h5>
      </div>
    </div>
  </div>

    <div class="row mt-3">
      <div class="col-1 offset-7">
       <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>