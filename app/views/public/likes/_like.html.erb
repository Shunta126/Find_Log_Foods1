  <% if restaurant.liked_by?(current_customer) %>
    <%= link_to restaurant_likes_path(restaurant), method: :delete, class: "link", remote: true, data: {"turbolinks" => false} do %>
     <i class="fa-solid fa-heart fa-lg" style="color: #f53d0f;"></i>
     <% end %>
    <%= restaurant.likes.count %>いいね
  <% else %>
    <%= link_to restaurant_likes_path(restaurant), method: :post, class: "link", remote: true, data: {"turbolinks" => false} do %>
     <i class="fa-regular fa-heart fa-lg" style="color: #999594;"></i>
     <% end %>
    <%= restaurant.likes.count %>いいね
  <% end %>